extends ../layout

block content
  .container
    div.page-header
        h1= title
    br
    form(role='form', action='/users/new',method='post',enctype='multipart/form-data',  style='max-width: 300px;')
        .form-group
            label.sr-only(for='username') Username
            input.form-control(type='text', name='username', placeholder='Username')
        .form-group
            label.sr-only(for='email') Email address
            input.form-control(type='text', name='email', placeholder='Email')
        .form-group
            label.sr-only(for='password') Password
            input.form-control(type='password', name='password', placeholder='Password')
        .form-group
            label.sr-only(for='password2') Confirm password
            input.form-control(type='password', name='password2', placeholder='Confirm Password')
        .form-group
            label.sr-only(for='avatar') Profile picture
            input.form-control(type="file", name="avatar", id="avatar")
        button.btn.btn-primary(type='submit') Submit
        span   
        a(href='/')
        button.btn.btn-default(type='button') Cancel
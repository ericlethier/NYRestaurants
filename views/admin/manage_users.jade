extends ../layout

block content
    div.container
        div.page-header
            h1= title
        div.content
            table.table.table-hover
                thead
                    tr
                        th Name
                        th Email
                        th isAdmin
                        th CreatedAt
                tbody
                    each user, i in userList
                        tr
                            td(style='vertical-align:middle')= user.username
                            td(style='vertical-align:middle')= user.email
                            td(style='vertical-align:middle')= user.isAdmin
                            td(style='vertical-align:middle')= user.createdAt
                            td
                                a.btn.btn-danger.btn-lg(href="/users/delete/#{user.username}") 
                                    span.glyphicon.glyphicon-trash
